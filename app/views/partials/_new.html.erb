<h1 class="text-dark">New Reviews</h1>
<%= form_tag("/authors/#{@author.id}/reviews") do %>
  <%= hidden_field_tag :author_id, @author.id  %>
  <div class="form-group">
    <%= label_tag 'title' %>
    <%= text_field_tag 'title', nil, class: 'form-control', minlength: '2', maxlength: '10', required: true %>
  </div>
  <div class="form-group">
    <%= label_tag 'description' %>
    <%= text_area_tag 'description', nil, class: 'form-control', rows: 5, minlength: '5', maxlength: '500', required: true %>
  </div>
  <div class="form-group">
    <%= label_tag 'rating (1 to 5)' %>
    <%= number_field_tag 'rating', nil, class: 'form-control', min: '0', max: '5', required: true %>
  </div>
  <%= submit_tag 'Create review', class: 'btn btn-primary' %>
<% end %>